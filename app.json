{
	"expo": {
		"name": "stumbl",
		"slug": "stumbl",
		"version": "1.0.0",
		"orientation": "portrait",
		"plugins": [
			[
				"expo-location",
				{
					"locationAlwaysPermission": "Allow Stumbl to use your location."
				}
			],
			[
				"expo-contacts",
				{
					"contactsPermission": "Allow Stumbl to access your contacts."
				}
			],
			[
				"expo-build-properties",
				{
					"ios": {
						"useFrameworks": "static"
					}
				}
			]
		],
		"icon": "./assets/icon.png",
		"userInterfaceStyle": "light",
		"splash": {
			"image": "./assets/splash.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"assetBundlePatterns": ["**/*", "assets/fonts/*"],
		"ios": {
			"supportsTablet": true,
			"infoPlist": {
				"NSLocationAlwaysUsageDescription": "Allow Stumbl to access your locations so that it can notify you when you are near a friend.",
				"UIBackgroundModes": ["location", "fetch"],
				"NSContactsUsageDescription": "Allow Stumbl to access your contacts so that it can see who you are connected with."
			},
			"bundleIdentifier": "com.stumbl.app"
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			},
			"permissions": [
				"ACCESS_COARSE_LOCATION",
				"ACCESS_FINE_LOCATION",
				"FOREGROUND_SERVICE",
				"READ_CONTACTS"
			],
			"package": "com.stumbl.app"
		},
		"web": {
			"favicon": "./assets/favicon.png"
		},
		"extra": {
			"eas": {
				"projectId": "ea84fbee-ab4f-4f4f-80a6-967792504c67"
			}
		}
	}
}
