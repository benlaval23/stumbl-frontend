{
  "expo": {
    "name": "stumbl",
    "slug": "stumbl",
    "version": "1.0.0",
    "orientation": "portrait",
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysPermission": "Allow Stumbl to use your location."
        }
      ],
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow Stumbl to access your contacts."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "permissions": [
      "ACCESS_COARSE_LOCATION",
      "ACCESS_FINE_LOCATION"
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*",
      "assets/fonts/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location for...NSLocationWhenInUseUsageDescription",
        "NSLocationAlwaysUsageDescription": "We need your location for...NSLocationAlwaysUsageDescription",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location for...NSLocationAlwaysAndWhenInUseUsageDescription",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "NSContactsUsageDescription": "Allow Stumbl to access your contacts."
      },
      "bundleIdentifier": "com.stumbl.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS"
      ],
      "package": "com.stumbl.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "ea84fbee-ab4f-4f4f-80a6-967792504c67"
      }
    }
  }
}
